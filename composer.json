{
    "name": "webaard/laravel-shopping-cart",
    "description": "Shopping cart that can be used inside a Laravel application",
    "keywords": ["laravel", "shoppingcart"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Webaard\\LaravelShoppingCart\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Webaard\\LaravelShoppingCart\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.6",
        "illuminate/session": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.8",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.3"
    },
    "authors": [
        {
            "name": "Rolin Bos",
            "email": "rolin@webaard.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Webaard\\LaravelShoppingCart\\LaravelShoppingCartServiceProvider"
            ],
            "aliases": {
                "Cart": "Webaard\\LaravelShoppingCart\\Facades\\Cart"
            }
        }
    }
}
